@model IEnumerable<Shikhai.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Books</h2>
<div class="row">
    <div class="col-md-2">
        <span>
            <a href="@Url.Action("Create")" class="btn btn-default">
                <span class="glyphicon glyphicon-plus-sign"></span>
                Create New
            </a>
        </span>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstructionsImageUrl)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.IsBook)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsStationary)
            </th>*@

            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>

                    @{
                        if (!string.IsNullOrEmpty(item.InstructionsImageUrl))
                        {
                            <a href="@item.InstructionsImageUrl" data-lightbox="image-1" data-title="@item.Name">
                                <img src="@item.InstructionsImageUrl" class="img-display" />
                            </a>
                        }
                    }
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.IsBook)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsStationary)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>

            </tr>
        }
    </tbody>
</table>
